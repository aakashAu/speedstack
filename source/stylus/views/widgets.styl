.view-widgets
	Flex-Horizontal()
	a
		font-family inherit
		color inherit
		font-size: 15px

	.pane-left, .pane-right
		display flex
	
	.pane-left
		flex-direction column
		

	.pane-left
		width: 200px;
		border-right: 1px solid theme_border
		height: auto
		box-sizing: border-box
		background-color: theme_widget
		h2.center-it
			font-size 14px
			padding-top 20px
			padding-left 10px
		#side-menu
			list-style none
			font-size 18px
			padding-left 32px
		a:hover { color: #23b7e5 }	
	
	.pane-right
		flex 1
		Flex-Vertical()
		padding 10px 10px
		.right-header			
			height: 60px
			font-size 20px 
			border-bottom 1px solid theme_border
			padding: 20px
			margin: -8px -10px 20px -11px
			display: block
			width auto
		.row-wrap
			.row-part
				width 33.33%
				padding 0px 16px
				display inline-block
				overflow hidden
				.panel
					border 0
					margin-bottom 20px
					border-radius 4px
					background-color #ffffff
					padding 14px 20px
					box-shadow: 0 1px 1px rgba(0,0,0,.05)
					.icon-right
						text-align right
						color #656565
					.num-value
						font-size 20px
						color #000000
						font-weight bold	
					.graph-text
						font-size 14px;
						color #777777
						font-weight normal
						padding 10px 0px
					.graph-line
						font-size 14px
						color #000000	
						
					.data-an	
						border-right 1px solid theme_border
						border-bottom 1px solid theme_border
						width 50%	
						padding 10px 14px
						float left
						height 80px
						.data-icon 
							width 40%
							font-size 14px
							color #777777
							font-weight normal
							float: left;
							padding: 10px;
							vertical-align middle
						.data-value
							width 60%
							font-size 16px
							color #000000
							text-align center
							float left
							font-weight bold
							.data-text
								font-size 13px
								color #333333
								font-weight normal
								margin-top 10px
					.data-an.data
						border-right 0px	
					.data-an.data-bottom
						border-bottom 0px	
					.user-profile-card
						position relative
						.info-img
							border-top-left-radius 4px
							border-top-right-radius 4px
							margin -14px 0 0 -20px
							max-width 111.4%
							height auto
							display block
						.user-pic
							position absolute
							left 50%
							bottom -60px
							width 120px
							height 120px
							margin-left -60px
							z-index 2
							.img-thumb
								border-radius 50%
					.user-name-text
						margin-top 70px
						text-align center
						h4.name-first
							color #000000
							font-weight 700
						h5.position
							color #777777
							font-weight 500
						p.user-intro
							color #777777
							font-weight 500
							margin-bottom 30px
					.user-social-index
						background-color #000000
						color #ffffff	
						margin -14px -20px -14px -20px
						border-bottom-left-radius 4px
						border-bottom-right-radius 4px
						padding 16px		
							
.view-widgets .center-it
	display block
	
.view-widgets ul#side-menu
	display block
	list-style none
	
	> li
		font-family font_light
		padding: 10px 10px 10px 10px